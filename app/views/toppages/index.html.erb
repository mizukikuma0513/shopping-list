<% if logged_in? %>
  <div class="row">
    <aside class="col-sm-4">
      <%= render 'tasks/form', task: @task %>
    </aside>
    <div class="col-sm-8">
      <ul class="nav nav-tabs nav-justified mb-3">
        <li class="nav-item"><a href="<%= tasks_path %>" class="nav-link <%= 'active' if current_page?(tasks_path) %>">タスク一覧 <span class="badge bg-secondary"><%= @count_tasks %></span></a></li>
        <li class="nav-item">お気に入りショップ一覧 <span class="badge bg-secondary"></span></a></li>
        <% @favorite_shops.each do |shop| %>
          <li class="nav-item"><%=  shop.name %> <span class="badge bg-secondary"></span></a></li>
        <% end %>
      </ul>
      <%= render 'tasks/tasks', tasks: @tasks %>
    </div>
  </div>
<% else %>
  <div class="bg-secondary p-3 p-sm-5 my-4 rounded">
    <div class="text-center text-white">
      <h1>Welcome to the Shopping-List !</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
      <h2>You have acount?</h2>
      <%= link_to 'Log in now!', login_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>
